<div class="container">

  <h1>Film list</h1>

  <ol class="breadcrumb">
    <li class="active">
      Movies
    </li>
  </ol>

  <div class='row'>
    <div class='col-sm-12'>
      <p>
        <form>
          <legend>Search</legend>
          <div class='col-xs-4'>
            <input type='text' class='form-control' value='<%= params[:keyword] %>' name='keyword' placeholder='Keyword' >
          </div>
        </form>
      </p>
      <p class='pull-right'>
        <a href='#' id='show-form' class='btn btn-primary'>New Movie</a>
      </p>
    </div>
  </div>

  <hr>

  <div class="col-sm-12 movie-form">
    <p>
      <%= form_for(Movie.new, html: { class: 'horizontal-form' }) do |f| %>

      <% end %> 
    </p>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <ul class="list-unstyled">
        <%= render @movies %>
      </ul>
    </div>
    <div class="col-sm-4">
      <h2>Genres</h2>
      <ul class="list-unstyled">
        <% @genres.each do |genre| %>
        <li>
          <%= link_to genre.name, movies_path(genre: genre.name), class: 'label label-primary' %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
